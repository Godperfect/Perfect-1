{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 10
      }
    }
  ],
  "functions": {
    "app.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "FFMPEG_PATH": "/opt/vercel/ffmpeg"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
